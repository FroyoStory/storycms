main.gh-main
  section.gh-view
    header.view-header
      h2.view-title
        span General
      section.view-actions
        button.btn.btn-blue Save
    section.view-content
      form
        fieldset
          .form-group
            label Blog Title
            input.gh-input(v-model="form.title")
            p The name of your blog
          .form-group
            label Blog description
            textarea.gh-input(v-model="form.description")
            p Describe what your blog is about
              span.word-count {{ form.description.length }}
        fieldset
          .form-group
            label Facebook Page
            input.gh-input(v-model="form.facebook")
            p URL of your blog's Facebook Page
          .form-group
            label Twitter Page
            input.gh-input(v-model="form.twitter")
            p URL of your blog's Twitter Page
          .form-group
            label Instagram Page
            input.gh-input(v-model="form.instagram")
            p URL of your blog's Instagram Page
          .form-group
            label Youtube Page
            input.gh-input(v-model="form.youtube")
            p URL of your blog's Youtube Page

        .settings-themes
          h3.h3 Themes
          .ember-view
            .theme-list
              .theme-list-item.theme-list-item--active
                .theme-list-item-body
                  span.name Casper - 1.3.1 (default)
                .theme-list-item-aside
                  a.theme-list-action Download
                  span.theme-list-action.theme-list-action-activate Active

